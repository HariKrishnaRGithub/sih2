<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                android:text="S I G N   I N"
                android:textColor="@color/purple"
                android:textSize="24sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="#0D3023AE">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Username or Email"
                        android:textColor="@color/secondary_text_color_white"
                        android:textColorHighlight="@color/secondary_text_color_white"
                        android:textColorHint="@color/secondary_text_color_white"
                        android:textColorLink="#FFFFFF"
                        android:textSize="20dp"></TextView>

                    <EditText
                        android:id="@+id/user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Username or Email"
                        android:inputType="textAutoComplete"
                        android:singleLine="true"
                        android:textColor="@color/secondary_text_color_white"
                        android:textColorHighlight="@color/secondary_text_color_white"
                        android:textColorHint="@color/secondary_text_color_white"
                        android:textColorLink="#FFFFFF"
                        android:textSize="20dp"></EditText>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                app:cardBackgroundColor="#0D3023AE">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textColor="@color/secondary_text_color_white"
                        android:textColorHighlight="@color/secondary_text_color_white"
                        android:textColorHint="@color/secondary_text_color_white"
                        android:textColorLink="#FFFFFF"
                        android:textSize="20dp"></TextView>

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="@color/secondary_text_color_white"
                        android:textColorHighlight="@color/secondary_text_color_white"
                        android:textColorHint="@color/secondary_text_color_white"
                        android:textColorLink="#FFFFFF"
                        android:textSize="20dp"></EditText>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                app:cardBackgroundColor="#1A3023AE"
                app:cardCornerRadius="25dp">

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#003023AE"
                    android:text="Login"
                    android:textColor="@color/secondary_text_color_white"
                    android:textColorHighlight="@color/secondary_text_color_white"
                    android:textColorHint="@color/secondary_text_color_white"
                    android:textColorLink="#FFFFFF" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/registerTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:text="New user? Register an account here !"
                android:textColor="@color/secondary_text_color_white"
                android:textColorHighlight="@color/secondary_text_color_white"
                android:textColorHint="@color/secondary_text_color_white"
                android:textColorLink="#FFFFFF"
                android:textSize="20dp"></TextView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>